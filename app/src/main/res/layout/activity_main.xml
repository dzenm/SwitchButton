<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="40dp"
    tools:context=".MainActivity">

    <com.dzenm.lib.SwitchButton
        android:id="@+id/switch_button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <com.dzenm.lib.SwitchButton
        android:id="@+id/switch_button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="20dp"
        app:isChecked="true" />

    <com.dzenm.lib.SwitchButton
        android:id="@+id/switch_button3"
        app:checkedColor="@color/colorPrimaryDark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <com.dzenm.lib.SwitchButton
        android:id="@+id/switch_button4"
        android:isScrollContainer="false"
        app:isEnabledAnimator="false"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="20dp" />

    <com.dzenm.lib.SwitchButton
        android:id="@+id/switch_button5"
        app:buttonCheckedColor="@color/colorAccent"
        app:buttonUncheckedColor="@color/colorPrimary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</LinearLayout>